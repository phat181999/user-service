{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.spec.ts", "!src/**/*.e2e-spec.ts"],
  "coveragePathIgnorePatterns": ["/node_modules/"],
  "coverageReporters": ["text", "lcov"],
  "verbose": true
}
